{
    "manifest_version": 3,
    "name": "Strands Word Finder",
    "version": "1.0",
    "description": "Find all valid words in NYT Strands puzzle grid",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.nytimes.com/games/strands*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "dictionary.json"
            ],
            "matches": [
                "https://www.nytimes.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}